<wargamepatch>

<!-- M60A3, M60A3 CMD, T-55 -->

<ndfpatch ndf="pc\ndf\patchable\gfx\everything.ndfbin" table="TModernWarfareDamageModuleDescriptor" name="M60A3_M60A3CMD_T55">
   <matchconditions>
		<matchcondition type="referencedby" table="TModuleSelector">
			<matchconditions>
				<matchcondition type="referencedby" table="TUniteAuSolDescriptor">
					<matchconditions>
						<matchcondition type="property" property="NameInMenuToken">749E9B1AB104C705</matchcondition>
						<matchcondition type="property" property="MotherCountry">US</matchcondition>
					</matchconditions>
				</matchcondition>
			</matchconditions>
		</matchcondition>
   </matchconditions>
   <changes>
		<change property="MaxDamages" type="Float32" operation="set">15</change>
		<change property="MaxHPForHUD" type="UInt32" operation="set">15</change>
   </changes>
</ndfpatch>




