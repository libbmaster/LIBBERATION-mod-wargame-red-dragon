<wargamepatch>


<!-- create M1A1 KE -->
	<ndfcreate ndf="pc\ndf\patchable\gfx\everything.ndfbin" table="TMountedWeaponDescriptor" name="M1A1_KE" />
<ndfpatch ndf="pc\ndf\patchable\gfx\everything.ndfbin" table="TTurretTwoAxisDescriptor" name="M1A1_KE">
		<matchconditions>
			<matchcondition type="referencedby" table="TWeaponManagerModuleDescriptor">
				<matchconditions>
					<matchcondition type="property" property="_ShortDatabaseName">WeaponDescriptor_Unit_M1A1_Abrams</matchcondition>
				</matchconditions>
			</matchcondition>
			<matchcondition type="property" property="Tag">tourelle1</matchcondition>
		</matchconditions>
		<changes>
			<change operation="append" property="MountedWeaponDescriptorList" type="ObjectReference">
				<reference table="TMountedWeaponDescriptor">
					<matchconditions>	
						<matchcondition type="property" property="__order">last</matchcondition>
					</matchconditions>
				</reference>
			</change>
		</changes>
</ndfpatch>

<!-- create M1A2 KE -->
